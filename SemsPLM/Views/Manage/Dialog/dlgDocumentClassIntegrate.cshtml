@{
    Layout = null;
}

<div style="width:100%;text-align:right;padding-right:10px;">
    <button id="DocClassCreate" class="custom-button"><i class='fas fa-check-circle'></i> 등록</button>
    <button id="DocClassEdit" class="custom-button"><i class="fas fa-edit"></i> 수정</button>
</div>
<div class="dlg_table">
    <table>
        <tr>
            <td><label class="lbText"><i class="fa fa-caret-right"></i> 상위 분류</label></td>
            <td><input type="text" id="FromOIDNm" value="" readonly="readonly"/></td>
        </tr>
        <tr>
            <td><label class="lbText"><i class="fa fa-caret-right"></i> 분류 체계명</label></td>
            <td><input type="text" id="Name" value="" /></td>
        </tr>
        <tr hidden ="hidden">
            <td><label class="lbText"><i class="fa fa-caret-right"></i> 채번 코드</label></td>
            <td><input type="text" id="Code" value="" /></td>
        </tr>
        <tr>
            <td style="vertical-align:baseline;"><label class="lbText"><i class="fa fa-caret-right"></i> 비고</label></td>
            <td>
                <textarea id="Description" style="width:90%; height:120px;"></textarea>
            </td>
        </tr>
        <tr>
            <td><label class="lbText"><i class="fa fa-caret-right"></i> 사용 유무</label></td>
            <td>
                <div id="IsUseY" class="custom-checkbox">
                    Yes
                </div>
                <div id="IsUseN" class="custom-checkbox">
                    No
                </div>
            </td>
        </tr>
    </table>
</div>


<script>
    var IsUseY$ = $('#IsUseY');
    var IsUseN$ = $('#IsUseN');
    
    IsUseY$.jqxRadioButton({ width: "45%", height: 25, checked: false });
    IsUseN$.jqxRadioButton({ width: "45%", height: 25, checked: false });
    
    var IsUseVal = null;
    
    $(function () {
        $("#IsUseY").on('change', function (event) {
            IsUseVal = "Y";
        });
        $("#IsUseN").on('change', function (event) {
            IsUseVal = "N";
        });
    });

</script>