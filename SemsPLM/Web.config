<configuration>

  <configSections>
    <sectionGroup name="system.web.webPages.razor" type="System.Web.WebPages.Razor.Configuration.RazorWebSectionGroup, System.Web.WebPages.Razor, Version=3.0.0.0, Culture=neutral, PublicKeyToken=31BF3856AD364E35">
      <section name="host" type="System.Web.WebPages.Razor.Configuration.HostSection, System.Web.WebPages.Razor, Version=3.0.0.0, Culture=neutral, PublicKeyToken=31BF3856AD364E35" requirePermission="false" />
      <section name="pages" type="System.Web.WebPages.Razor.Configuration.RazorPagesSection, System.Web.WebPages.Razor, Version=3.0.0.0, Culture=neutral, PublicKeyToken=31BF3856AD364E35" requirePermission="false" />
    </sectionGroup>
    <sectionGroup name="iBATIS">
      <section name="logging" type="IBatisNet.Common.Logging.ConfigurationSectionHandler, IBatisNet.Common" />
    </sectionGroup>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>

  <iBATIS>
    <logging>
      <logFactoryAdapter type="IBatisNet.Common.Logging.Impl.Log4NetLoggerFA,IBatisNet.Common.Logging.Log4Net">
        <arg key="configType" value="inline" />
        <!--<arg key="configType" value="external" />
        <arg key="configFile" value="Config/DBLog.config" />-->
      </logFactoryAdapter>
    </logging>
  </iBATIS>

  <log4net>
    <appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
      <file value="C:\PGM_LOG\SQL\" />
      <appendtofile value="true" />
      <datepattern value="yyyy-MM-dd'_Log.log'" />
      <staticlogfilename value="false" />
      <rollingstyle value="Date" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionpattern value="%d [%t] %-5p - %m%n" />
      </layout>
    </appender>

    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%-4timestamp [%thread] %-5level %logger %ndc - %message%newline" />
      </layout>
    </appender>
    <!-- IBATIS 로깅 추가 -->
    <root>
      <level value="DEBUG" />
      <appender-ref ref="RollingFile" />
      <appender-ref ref="ConsoleAppender" />
    </root>
    <!-- 쿼리로그 -->
    <logger name="IBatisNet.DataMapper.Commands.DefaultPreparedCommand">
      <level value="DEBUG" />
    </logger>

    <logger name="IBatisNet.DataMapper.Configuration.Cache.CacheModel">
      <level value="OFF" />
    </logger>

    <logger name="IBatisNet.DataMapper.LazyLoadList">
      <level value="OFF" />
    </logger>

    <!-- 커넥션이 열려있는지 닫혀져 있는지 확인여부 로그 -->

    <logger name="IBatisNet.DataMapper.SqlMapSession">
      <level value="OFF" />
    </logger>

    <logger name="IBatisNet.Common.Transaction.TransactionScope">
      <level value="OFF" />
    </logger>

    <logger name="IBatisNet.DataAccess.DaoSession">
      <level value="OFF" />
    </logger>

    <logger name="IBatisNet.DataAccess.Configuration.DaoProxy">
      <level value="OFF" />
    </logger>

    <logger name="IBatisNet.DataMapper.Configuration.Statements.PreparedStatementFactory">
      <level value="OFF" />
    </logger>

    <logger name="IBatisNet.DataMapper.Commands.IPreparedCommand">
      <level value="OFF" />
    </logger>
  </log4net>

  <appSettings>
    <add key="webpages:Version" value="3.0.0.0" />
    <add key="webpages:Enabled" value="false" />
    <add key="ClientValidationEnabled" value="true" />
    <add key="UnobtrusiveJavaScriptEnabled" value="true" />
    <add key="Provider" value="MSSQL" />
    <add key="aspnet:MaxJsonDeserializerMembers" value="2147483647" />
    <add key="maxJsonLength" value="52428800" />

    <!--파일 VAULT-->
    <add key="FileStorage" value="/PlmFileStorage" />
    <!--가상 디렉터리 사용-->
    <add key="ExcelTemplatePath" value="/ExcelTemplate" />
    <!--가상 디렉터리 사용-->
    <add key="ImageValutPath" value="ImageValut" />
    <add key="ImageTempPath" value="ImageTemp" />
    <add key="ValutPath" value="FileValut" />
    <add key="TempPath" value="FileTemp" />
    <add key="AutoVueTempPath" value="D:\apache-tomcat-8.5.42\webapps\Autovue\PlmFileStorage" />

    <!-- UseCookies -->
    <add key="IsCookies" value="false" />
    <add key="CookiesKey" value="WooriPLM" />
    <add key="CookiesHour" value="1" />

    <!--Mail 영역-->
    <!--
    <add key="IsDev" value="Y"/>
    <add key="EnableSSL" value="false"/>
